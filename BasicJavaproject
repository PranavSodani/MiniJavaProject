import java.util.*;
class UserSelection
{
    public int messageForCustomerSelection()
    {
        System.out.println("Please enter the above mentioned index of your favourable section");

        // for taking choice
        Byte userSelectedIndex;   
        Scanner sc =new Scanner(System.in);
        userSelectedIndex = sc.nextByte();
        
    }

}
class grocerySection extends UserSelection
{
    public void groceryList()
